[user]
	name = {{ git_username }}
	email = {{ git_email }}
{% if git_signing_key is defined %}
	signingkey = {{ git_signing_key }}
[commit]
	gpgsign = true
{% endif %}
[push]
	default = current
[alias]
	st = status
	co = checkout
	squash = commit --amend -C HEAD
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	pager = delta
	editor = nvim
[fetch]
	prune = true
[rebase]
	autosquash = true
[diff]
	tool = delta
	guitool = vscode
[difftool]
	prompt = false
[difftool "delta"]
	cmd = delta -s -n --diff $LOCAL $REMOTE
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[delta]
	features = side-by-side line-numbers decorations
[interactive]
	diffFilter = delta --color-only
[merge]
	tool = nvimdiff
	guitool = vscode
[mergetool]
	keepBackup = false
	prompt = false
[mergetool "vscode"]
	keepBackup = false
	cmd = code --wait $MERGED
[mergetool "nvimdiff"]
	keepBackup = false
	cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED
[pull]
	ff = only
[init]
	defaultBranch = master
