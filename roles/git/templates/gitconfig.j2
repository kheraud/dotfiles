[push]
  default = current
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  co = checkout
  pf = push --force-with-lease
  squash = commit --amend -C HEAD
  st = status
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
  editor = nvim
  precomposeunicode = true
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[diff]
  colorMoved = zebra
[user]
	name = {{ git_username }}
	email = {{ git_email }}
[status]
    submodulesummary = 1
