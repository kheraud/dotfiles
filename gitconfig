[alias]
    co=checkout
    ci=commit -s
    st=!git -p status
    pop=reset HEAD~1
    unstash=stash apply
    amend=commit -s --amend
    squash=commit -s --amend -C HEAD
    p=!git push origin HEAD
    stage=add
    unstage=reset HEAD --
    track=add -N
    untrack=rm --cached
    tempo=commit -a -m tempo
    undo=reset HEAD~1
    vomit=commit
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -

